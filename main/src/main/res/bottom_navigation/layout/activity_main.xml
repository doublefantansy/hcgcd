<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <hzkj.cc.base.weight.indulgeTitle.IndulgeTitle
            android:id="@+id/indulgeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/base_blue"
            app:centerText="告警信息"
            app:leftImage="@drawable/area"
            app:rightImage="@drawable/more"
            app:showLeftBack="false"></hzkj.cc.base.weight.indulgeTitle.IndulgeTitle>

        <hzkj.cc.mybottomnavigation.MyBottomNavigation
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></hzkj.cc.mybottomnavigation.MyBottomNavigation>
    </LinearLayout>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/base_white"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <hzkj.cc.base.weight.CcTextView
                    android:id="@+id/startTimeChoose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawer_button_style"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    android:text="起始日期"
                    android:textColor="@color/base_white"
                    android:textSize="17sp"></hzkj.cc.base.weight.CcTextView>

                <hzkj.cc.base.weight.CcTextView
                    android:id="@+id/startTimeShow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:textColor="@color/base_black"
                    android:textSize="20sp"></hzkj.cc.base.weight.CcTextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <hzkj.cc.base.weight.CcTextView
                    android:id="@+id/endTimeChoose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawer_button_style"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    android:text="结束日期"
                    android:textColor="@color/base_white"
                    android:textSize="17sp"></hzkj.cc.base.weight.CcTextView>

                <hzkj.cc.base.weight.CcTextView
                    android:id="@+id/endTimeShow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:textColor="@color/base_black"
                    android:textSize="20sp"></hzkj.cc.base.weight.CcTextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp">

                <hzkj.cc.base.weight.CcTextView
                    android:id="@+id/reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/drawer_button_style"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:text="重置"
                    android:textColor="@color/base_white"
                    android:textSize="17sp"></hzkj.cc.base.weight.CcTextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp">


                <hzkj.cc.base.weight.CcTextView
                    android:id="@+id/submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/drawer_button_style"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:text="提交"
                    android:textColor="@color/base_white"
                    android:textSize="17sp"></hzkj.cc.base.weight.CcTextView>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>