<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.baidu.mapapi.map.TextureMapView
            android:id="@+id/bmapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.baidu.mapapi.map.TextureMapView>

        <hzkj.cc.base.weight.CcTextView
            android:id="@+id/textview_areaName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/base_red"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/base_white"
            android:textSize="22sp"></hzkj.cc.base.weight.CcTextView>
    </FrameLayout>

</LinearLayout>