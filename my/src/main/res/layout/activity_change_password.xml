<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <hzkj.cc.base.weight.indulgeTitle.IndulgeTitle
        android:id="@+id/indulgeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_blue"
        app:centerText="修改密码"
        app:showLeftBack="true"></hzkj.cc.base.weight.indulgeTitle.IndulgeTitle>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edittext_old_password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/my_edittext_style"
            android:hint="请输入原密码"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textCursorDrawable="@drawable/my_shape_cursor_color"></EditText>

        <EditText
            android:id="@+id/edittext_new_password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/my_edittext_style"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textCursorDrawable="@drawable/my_shape_cursor_color"></EditText>

        <EditText
            android:id="@+id/edittext_new_password_confirm"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/my_edittext_style"
            android:hint="请重复新密码"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textCursorDrawable="@drawable/my_shape_cursor_color"></EditText>

        <hzkj.cc.base.weight.CcTextView
            android:id="@+id/textview_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/my_login_button_style"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:paddingRight="25dp"
            android:paddingBottom="10dp"
            android:text="提交"
            android:textColor="@color/base_white"
            android:textSize="17sp"></hzkj.cc.base.weight.CcTextView>
    </LinearLayout>
</RelativeLayout>