<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_white"
        android:orientation="vertical">

        <hzkj.cc.base.weight.CcTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:textSize="20sp"></hzkj.cc.base.weight.CcTextView>

        <hzkj.cc.base.weight.CcTextView
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:textSize="17sp"></hzkj.cc.base.weight.CcTextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/changePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/base_white"
        android:orientation="vertical">

        <RelativeLayout
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <hzkj.cc.base.weight.CcTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="7dp"
                android:text="修改密码"
                android:textSize="17sp"></hzkj.cc.base.weight.CcTextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="7dp"
                android:src="@drawable/arrow_right"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/base_gray"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"></TextView>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/checkUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_white"
        android:orientation="vertical">

        <RelativeLayout
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <hzkj.cc.base.weight.CcTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="7dp"
                android:text="检查更新"
                android:textSize="17sp"></hzkj.cc.base.weight.CcTextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="7dp"
                android:src="@drawable/arrow_right"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/base_gray"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"></TextView>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/quit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_white"
        android:orientation="vertical">

        <RelativeLayout
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <hzkj.cc.base.weight.CcTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="7dp"
                android:text="退出用户"
                android:textSize="17sp"></hzkj.cc.base.weight.CcTextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="7dp"
                android:src="@drawable/arrow_right"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/base_gray"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"></TextView>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>